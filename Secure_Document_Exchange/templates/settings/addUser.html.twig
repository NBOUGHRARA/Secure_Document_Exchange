{% extends 'base.html.twig' %}

{% block title %} Settings! {% endblock %}

{% block body %}

    <div class="mt-2" style="margin-left:10%;margin-right:10%;">

		{{form_start(form)}}

			{{form_row(form.email)}}
			{{form_row(form.roles)}}
			{{form_row(form.password)}}
			{{form_row(form.confirm_password)}}
			{{form_row(form.isDeleted, {'label': 'Disable User', 'attr' : {'class' : 'w-10 ml-2 mt-3'}})}}


			<button class="btn btn-success" type="submit">{% trans %}Add{% endtrans %} !</button>
			<a class="btn btn-danger" href="{{ path('settings_users') }}">{% trans %}Cancel{% endtrans %}</a>

		{{form_end(form)}}
	</div>

{% endblock %}
